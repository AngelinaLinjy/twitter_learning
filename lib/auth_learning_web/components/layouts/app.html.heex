        <a href="#" class="flex-1 text-center py-4 text-xl font-bold hover:bg-gray-900">
          For you
        </a>
        <a href="#" class="flex-1 text-center py-4 text-xl font-bold hover:bg-gray-900">
          Following
        </a>
      </nav>
    </div>
    <!-- Page content -->
    <main class="p-4">
      <.flash_group flash={@flash} />
      <%= @inner_content %>
    </main>
  </div>
  <!-- Right sidebar (optional) -->
  <div class="hidden lg:block w-80 border-l border-gray-800 p-4">
    <!-- Search box -->
    <div class="mb-4">
      <input
        type="text"
        placeholder="Search"
        class="w-full bg-gray-900 rounded-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400"
      />
    </div>
    <!-- Trends -->
    <div>
      <h2 class="text-xl font-bold mb-2">Trends</h2>
      <!-- Add trend items -->
    </div>
  </div>
